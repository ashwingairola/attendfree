<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subject_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ashwingairola.attendfree.SubjectDetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/subject_name"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/background_subject_details"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:stretchColumns="0,1">

        <TableRow>

            <TextView
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Attended"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attended_view"
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Bunked"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bunked_view"
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Cancelled"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cancelled_view"
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Total"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_view"
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="% Attendance"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/percent_attendance_view"
                android:layout_margin="5dp"
                android:background="@drawable/background_subject_details"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/back"
        android:background="@drawable/grey_button"
        android:onClick="onClickBackButton"/>
</LinearLayout>
